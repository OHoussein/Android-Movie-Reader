<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_show_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/article.item.bg"
        android:clickable="true"
        android:foreground="@drawable/transparent_clickable"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_show"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item.show.image.height"
                android:scaleType="fitCenter"
                tools:src="@android:drawable/screen_background_dark"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_show_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                tools:text="Under the Dome" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>